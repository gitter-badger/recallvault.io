extends layout

block content
	body
		nav.navbar.navbar-inverse(role='navigation')
			.navbar-header
				.container-fluid
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='#') Recall Vault
			#bs-example-navbar-collapse-1.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-right
					if !user
						li
							a No user exists
					else 
						li
							a Welcome #{user.username}
					li
						a Add to Library
					li
						a(href='/auth/logout') Logout

		.container
			div#signup-form.row
				form.col-sm-6.col-sm-offset-3(action="/search", method="post", role="form")
					.form-group
						input.form-control(type="text", name="searchterm", placeholder="Search Term(s)")
					.form-group.text-right
						button#search.btn.btn-primary<span class="glyphicon glyphicon-search"></span> Submit

			//- h6: em #{user}
			
			//- h3 Product List
			
			//- //- Placeholder for where products go 
			//- ul#product-list

			//- Add Products
			form#new-product
				input(type="text", name="manufacturer", placeholder="manufacturer")
				input(type="submit")


		for product in user.products
			h3= product
